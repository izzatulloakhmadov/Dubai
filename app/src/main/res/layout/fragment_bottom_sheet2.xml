<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".BottomSheet1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ciziq"
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_marginTop="27dp"
            app:backgroundTint="@color/black"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/qizil"
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/zaza"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ciziq" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="250dp"
            android:layout_height="77dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Your listing is now published ðŸŽ‰"
            android:textColor="#050342"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qizil" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="271dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consectetur."
            android:textColor="#676767"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retry"
            android:layout_width="158dp"
            android:layout_height="70dp"
            android:textStyle="bold"
            android:layout_marginStart="192dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="24dp"
            android:paddingStart="13dp"
            android:text="Finish"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/text2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/close"
            android:layout_width="158dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="192dp"
            android:paddingStart="13dp"
            android:textStyle="bold"
            android:text="Add More"
            android:textAllCaps="false"
            android:textColor="#010C4E"
            android:textSize="16sp"
            app:backgroundTint="#B8B8B8"
            app:cornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/text2" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>