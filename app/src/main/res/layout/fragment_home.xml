<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="812dp"
    tools:context=".HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <SearchView
        android:id="@+id/search"
        android:layout_width="327dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/recccc"
        android:focusable="true"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toTopOf="parent"
        android:queryHint="Search House, Apartment, etc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cipgr"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:selectionRequired="true"
        app:singleSelection="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            style="@style/chip_style"
            android:layout_marginStart="24dp"
            android:text="@string/town_house"
            android:textAlignment="center"

            android:textSize="10sp" />

        <com.google.android.material.chip.Chip
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="🏢 Apartment"
            style="@style/chip_style"
            android:textAlignment="center"
            android:textSize="10dp" />

        <com.google.android.material.chip.Chip
            android:layout_width="120dp"
            style="@style/chip_style"
            android:layout_height="50dp"
            android:text="🏣 Villa"
            android:textAlignment="center"
            android:textSize="10dp" />


    </com.google.android.material.chip.ChipGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="255dp"
            android:text="Community"
            android:textColor="#252B5C"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cipgr" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="316dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:text="view all"
            android:textColor="#252B5C"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cipgr"/>
    <LinearLayout
        android:id="@+id/liner"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="327dp"
        android:layout_height="225dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"

        android:layout_marginEnd="24dp"
        android:background="@drawable/rec">

        <ImageButton
            android:layout_width="311dp"
            android:layout_height="175dp"
            android:layout_margin="8dp"
            android:background="@drawable/rad"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/n" />


        <TextView
            android:id="@+id/textview"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginStart="-310dp"
            android:layout_marginTop="190dp"
            android:text="Burj Khalifa"
            android:textColor="#252B5C"
            android:textSize="16sp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner2"
        app:layout_constraintTop_toBottomOf="@id/liner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="327dp"
        android:layout_height="225dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"

        android:layout_marginEnd="24dp"
        android:background="@drawable/rec">

        <ImageButton
            android:layout_width="311dp"
            android:layout_height="175dp"
            android:layout_margin="8dp"
            android:background="@drawable/rad"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/n" />


        <TextView
            android:id="@+id/textview1"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginStart="-310dp"
            android:layout_marginTop="190dp"
            android:text="Palm hils"
            android:textColor="#252B5C"
            android:textSize="16sp" />


    </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/liner2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="327dp"
            android:layout_height="225dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"

            android:layout_marginEnd="24dp"
            android:background="@drawable/rec">

            <ImageButton
                android:layout_width="311dp"
                android:layout_height="175dp"
                android:layout_margin="8dp"
                android:background="@drawable/rad"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/n" />


            <TextView
                android:id="@+id/textview3"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_marginStart="-310dp"
                android:layout_marginTop="190dp"
                android:text="Palm hils"
                android:textColor="#252B5C"
                android:textSize="16sp" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>