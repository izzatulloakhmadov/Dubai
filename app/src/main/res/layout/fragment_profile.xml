<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profile"
            android:layout_width="52dp"
            android:layout_height="23dp"
            android:layout_marginStart="162dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="161dp"
            android:text="Profile"
            android:textColor="#252B5C"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addvilla"
            android:layout_width="315dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#EDEDED"
            android:gravity="center"
            android:text="Add villa"
            android:textAllCaps="false"
            android:textColor="#042378"
            app:cornerRadius="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile"
             />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/importt"
            android:layout_width="327dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#1E2038"
            android:gravity="center"
            android:text="Impotr"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/communitycontrol"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/usesControl"
            android:layout_width="327dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#1E2038"
            android:gravity="center"
            android:text="Uses Control"
            android:textAllCaps="false"
            app:cornerRadius="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addvilla" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/communitycontrol"
            android:layout_width="327dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#1E2038"
            android:gravity="center"
            android:text="CommunityControl"
            android:textAllCaps="false"
            app:cornerRadius="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usesControl" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout"
            android:layout_width="327dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#1E2038"
            android:gravity="center"
            android:text="Log out"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/importt"
             />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>




